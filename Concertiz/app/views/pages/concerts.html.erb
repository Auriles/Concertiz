  <div class="container bloc-md">
    <div class="row">

      <div class="col-sm-12">
        <div class="row">
          <% @shows.each do |show| %>
            <div class="col-sm-3">
              <!-- <img src="img/placeholder-image.png" class="img-responsive" /> -->
              <%= image_tag 'nekfeu_concert' , {:class=>'img-responsive'}  %> <br/>
              <h4 class="mg-md">
              <p>Artiste : <%= show.artist %> </p>
              </h4>
              <h4 class="mg-md">
              <p> Date : <%= show.date %> </p>
              </h4>
              <h4 class="mg-md">
              <p> Adresse : <%= show.adress %> </p>
              </h4>
              <h4 class="mg-md">
              <p> Prix : <%= show.price %> </p>
              </h4>
              <h4 class="mg-md">
              <p> Places : <%= show.places %> </p>
              </h4>
              <div class="btn-group pull-left">
                <a href="#" class="btn dropdown-toggle btn-blue-gray" data-toggle="dropdown" aria-expanded="false">Places <span class="caret"></span></a> <br/>
                <!-- <%= link_to 'Places', '#', {:class=>'btn dropdown-toggle btn-blue-gray'} %> -->
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <!-- <a class="a-btn a-block" href="concerts.html">1 place</a> -->
                    <%= link_to '1 Place', '#', {:class=>'a-btn a-block'} %>
                  </li>
                  <li>
                    <!-- <a href="index.html" class="a-btn a-block">2 places</a> -->
                    <%= link_to '2 Places', '#', {:class=>'a-btn a-block'} %>
                  </li>
                  <li>
                    <!-- <a href="index.html" class="a-btn a-block">3 places</a> -->
                    <%= link_to '3 Places', '#', {:class=>'a-btn a-block'} %>
                  </li>
                </ul>
              </div> <br/>
              <div class="divider-h">
                <span class="divider"></span>
              </div>
              <button class="btn btn-block btn-blue-gray bloc-button" type="submit">
                Réserver
              </button>
              <div class="divider-h">
                <span class="divider"></span>
              </div>
              <form id="form_794" novalidate>
                <div class="form-group">
                  <label>
                    Commentaires
                  </label>
                  <!-- <textarea class="form-control" rows="4" cols="50" id="textarea_2466" placeholder="Soyez le premier à commenter !"></textarea> -->
                  <%= text_field :textarea , :_2466 , {:class=>'form-control', :placeholder=>'Soyez le premier à commenter !'} %>
                </div>
              </form>
              <!-- <a href="concerts.html" class="a-btn ltc-celestial-blue a-block">Voir</a> -->
            </div>
            <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
