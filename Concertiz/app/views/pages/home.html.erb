    <div class="row voffset-md">
      <div class="col-sm-12">
        <form id="form_448" novalidate>
          <div class="form-group">
            <label>
              Rechercher un concert
            </label>
            <!-- <input class="form-control" placeholder="Ex : Nekfeu" id="input_416" /> -->
            <%= text_field :input , :_416 , {:class=>'form-control', :placeholder=>'Ex : Nekfeu'} %>
          </div>
          <!-- <a href="concerts.html" class="btn  btn-block btn-celestial-blue">Rechercher</a> -->
          <%= submit_tag 'Rechercher', {:class=>'btn  btn-block btn-celestial-blue'} %>
        </form>
      </div>
    </div>
  </div>
</div>
