<!-- bloc-1 -->
<div class="bloc b-parallax bg-image2 bgc-celestial-blue d-bloc tc-white-smoke" id="bloc-1">
  <div class="container bloc-md">
    <div class="row drag-obj">
      <div class="col-sm-3">
        <div class="text-center">
          <span class="fa fa-check-square-o icon-lg icon-round pressed-t icon-2967 animated zoomIn animDelay02"></span>
        </div>
        <h3 class="text-center mg-md text-w-sm lg-shadow animated zoomIn animDelay02">
          <strong>Inscris toi</strong>
        </h3>
      </div>
      <div class="col-sm-3">
        <div class="text-center">
          <span class="ion ion-at icon-round icon-lg pressed-t animated zoomIn animDelay04"></span>
        </div>
        <h3 class="mg-md text-w-sm lg-shadow text-left text-center animated zoomIn animDelay04">
          <strong>Connectes toi</strong>
        </h3>
      </div>
      <div class="col-sm-3">
        <div class="text-center">
          <span class="fa fa-comments icon-round icon-lg pressed-t animated zoomIn animDelay06"></span>
