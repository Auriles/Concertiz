<!-- bloc-2 -->

<div class="bloc bgc-white-smoke l-bloc" id="bloc-2">
  <div class="container bloc-md">
    <div class="row">
    <% @shows.each do |show| %>
      <div class="col-sm-3">
        <!-- <img src="img/placeholder-image.png" class="img-responsive" /> -->
        <%= image_tag 'nekfeu_concert' , {:class=>'img-responsive'}  %> <br/>
        <h4 class="mg-md">
        <p>Artiste : <%= show.artist %> </p>
        </h4>
        <h4 class="mg-md">
        <p> Date : <%= show.date %> </p>
        </h4>
        <h4 class="mg-md">
        <p> Adresse : <%= show.adress %> </p>
        </h4>
        <h4 class="mg-md">
        <p> Prix : <%= show.price %> </p>
        </h4>
        <h4 class="mg-md">
        <p> Places : <%= show.places %> </p>
        </h4>
        <!-- <a href="concerts.html" class="a-btn ltc-celestial-blue a-block">Voir</a> -->
      </div>
      <%end%>
    </div>
  </div>
</div>
<!-- bloc-2 END -->

