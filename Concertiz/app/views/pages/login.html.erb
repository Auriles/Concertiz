<!-- bloc-4 -->
<div class="bloc bgc-white-smoke l-bloc" id="bloc-4">
  <div class="container bloc-xl">
    <div class="row">
      <div class="col-sm-12">
        <form id="form_4" novalidate>
          <h1 class="mg-md text-center">
            Connexion
          </h1>
          <div class="form-group">
            <label>
              Identifiant
            </label>
            <!-- <input id="name4" class="form-control" required placeholder="Veuillez saisir votre email" /> -->
            <%= text_field :name4 , :email , {:class=>'form-control', :type=>'email', :placeholder=>'Veuillez saisir votre adresse email'} %>
          </div>
          <div class="form-group">
            <label>
              Mot de passe
            </label>
            <!-- <input id="email4" class="form-control" required placeholder="Veuillez saisir votre mot de passe" type="password" /> -->
            <%= password_field :email4 , :mdp , {:class=>'form-control', :placeholder=>'Veuillez saisir votre mot de passe', :maxlength=>"25"} %>
          </div>
          <!-- <a class="btn btn-block btn-rd btn-sm btn-medium-spring-green" href="profile.html"><span class="ion ion-android-done icon-sm"></span></a> -->
          <%= link_to 'Se connecter', 'profile.html', {:class=>'btn btn-block btn-rd btn-sm btn-medium-spring-green'} %>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- bloc-4 END -->
