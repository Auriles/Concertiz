<!-- bloc-3 -->
<div class="bloc bgc-white-smoke l-bloc" id="bloc-3">
  <div class="container bloc-md">
    <div class="row">
      <div class="col-sm-12">
        <form id="form_3" novalidate>
          <h1 class="mg-md text-center">
            Inscription
          </h1>
          <div class="form-group">
            <label>
              Nom
            </label>
            <%= text_field :name , :name , {:class=>'form-control', :placeholder=>'Entrez votre nom'} %>
          </div>
          <div class="form-group">
            <label>
              Prénom
            </label>
            <%= text_field :prénom , :prénom , {:class=>'form-control', :placeholder=>'Entrez votre prénom'} %>
          </div>
          <div class="form-group">
            <label>
              Email
            </label>
            <%= text_field :email , :email , {:class=>'form-control', :type=>'email', :placeholder=>'Entrez votre adresse email'} %>
          </div>
          <div class="form-group">
            <label>
              Mot de passe
            </label>
            <%= password_field :identifiant , :identifiant , {:class=>'form-control', :placeholder=>'Veuillez choisir un mot de passe', :maxlength=>"25"} %>
          </div>
          <div class="form-group">
            <label>
              Confirmation de mot de passe
            </label>
            <%= password_field :mdp , :mdp , {:class=>'form-control', :placeholder=>'Veuillez confirmer votre mot de passe', :maxlength=>"25"} %>
          </div>
          <%= submit_tag 'S\'inscrire', {:class=>'bloc-button btn btn-block btn-sm btn-rd btn-medium-spring-green'} %>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- bloc-3 END -->
