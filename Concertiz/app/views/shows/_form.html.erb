            <%= f.date_select :date, {:class=>'form-control'} %>
          </div>
          <div class="form-group">
            <!-- <label>
              Email
            </label> -->
            <%= f.label :Adresse %><br />
            <!-- <input id="email" class="form-control" type="email" required placeholder="Entrez votre adresse email" /> -->
