      <div class="col-sm-12">
        <%= form_for(show) do |f| %>
          <h1 class="mg-md text-center">
            Création d'un concert
          </h1>
          <div class="form-group">
            <!-- <label>
              Nom
            </label> -->
            <%= f.label :Artiste %><br />
            <!-- <input id="name" class="form-control" required placeholder="Entrez votre nom" /> -->
            <%= f.text_field :artist , {:class=>'form-control', :placeholder=>'Entrez le nom d\'un artiste'} %>
          </div>
          <div class="form-group">
            <!-- <label>
              Prénom
            </label> -->
            <%= f.label :Date_du_concert %><br />
