          </div>
          <div class="form-group">
            <!-- <label>
              Mot de passe
            </label> -->
            <%= f.label :Prix %><br />
            <!-- <input id="identifiant" class="form-control" required placeholder="Veuillez choisir un mot de passe" maxlength="25" data-validation-required-message="identifiant is required." /> -->
