<p id="notice"><%= notice %></p>

<h1>Liste des concerts</h1>
<h3><%= link_to '=> Afficher la liste des utilisateurs', users_path%></h3>

<!-- bloc-0 -->
<div class="bloc l-bloc bgc-white" id="bloc-0">
  <div class="container bloc-lg">
    <div class="row">
      <div class="col-sm-2">
        <span class="empty-column">
          <strong><th>Artiste</th><strong/> <br/>
          <% @shows.each do |show| %> <br/>
          <tr>
            <td><%= show.artist %></td>
           <%end%>
          </tr>
        </span>
      </div>

      <div class="col-sm-2">
        <span class="empty-column">
          <strong><th>Date</th><strong/> <br/>
          <% @shows.each do |show| %> <br/>
          <tr>
            <td><%= show.date %></td>
           <%end%>
          </tr>
        </span>
      </div>

      <div class="col-sm-2">
        <span class="empty-column">
          <strong><th>Adresse</th><strong/> <br/>
          <% @shows.each do |show| %> <br/>
          <tr>
            <td><%= show.adress %></td>
           <%end%>
          </tr>
        </span>
      </div>

      <div class="col-sm-2">
        <span class="empty-column">
          <strong><th>Prix</th><strong/> <br/>
          <% @shows.each do |show| %> <br/>
          <tr>
            <td><%= show.price %></td>
           <%end%>
          </tr>
        </span>
      </div>

      <div class="col-sm-2">
        <span class="empty-column">
          <strong><th>Places</th><strong/> <br/>
          <% @shows.each do |show| %> <br/>
          <tr>
            <td><%= show.places %></td>
           <%end%>
          </tr>
        </span>
      </div>

      <div class="col-sm-2">
        <span class="empty-column">
          <th>Options</th> <br/>
          <% @shows.each do |show| %> <br/>
          <tr>
            <td><%= link_to 'Show', show %></td>
            <td><%= link_to 'Edit', edit_show_path(show) %></td>
            <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
           <%end%>
          </tr>
        </span>
      </div>
    </div>
  </div>
</div>




